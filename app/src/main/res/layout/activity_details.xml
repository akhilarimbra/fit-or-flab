<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/mainBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.akhilarimbra.fitorflab.DetailsActivity"
    android:background="#2ca5f5">

    <TextView
        android:text="Weight Lifting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exerciseTitle"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="30dp"
        android:textColor="#FFF" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight"
        android:id="@+id/exerciseImage" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000">

        <TextView
            android:text="Mark it complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:paddingTop="10dp"
            android:textColor="@android:color/background_light" />

        <CheckBox
            android:text="Complete set 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set1"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:checked="false"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            app:buttonTint="#FFF"
            android:textAlignment="center" />

        <CheckBox
            android:text="Complete set 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set2"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:checked="false"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            app:buttonTint="#FFF"
            android:textAlignment="center" />

        <CheckBox
            android:text="Complete set 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set3"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:checked="false"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            app:buttonTint="#FFF"
            android:textAlignment="center" />

        <CheckBox
            android:text="Complete set 4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set4"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:checked="false"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            app:buttonTint="#FFF"
            android:textAlignment="center" />

        <CheckBox
            android:text="Complete set 5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set5"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:checked="false"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            app:buttonTint="#FFF"
            android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>
